import oracledb
import pandas as pd
from collections import defaultdict

# Oracle connection details
dsn = oracledb.makedsn("eurvlid25121.xmp.neLintra", 1521, service_name="358fr305")
conn = oracledb.connect(user="RAIDBA", password="1#Socrates UATDb Refresh#0", dsn=dsn)
cursor = conn.cursor()

# Load tables
df_algo = pd.read_sql("SELECT * FROM INITIAL_MARGIN_EODNEW_DATA", conn)
df_star = pd.read_sql("SELECT * FROM STARALGONEW_DATA", conn)

# Prompt exclusion parameters
file_type = input("Apply exclusion rule to (ALGO/STAR): ").strip().upper()
column = input("Enter column name for exclusion: ").strip()
operator = input("Enter operator (= or !=): ").strip()
value = input("Enter comma-separated value(s) to exclude: ").strip()
values = [v.strip() for v in value.split(",")]

# Apply exclusion
excluded_df = pd.DataFrame()
if file_type == "ALGO" and column in df_algo.columns:
    if operator == "=":
        excluded_df = df_algo[df_algo[column].isin(values)]
        df_algo = df_algo[~df_algo[column].isin(values)]
    else:
        excluded_df = df_algo[~df_algo[column].isin(values)]
        df_algo = df_algo[df_algo[column].isin(values)]

elif file_type == "STAR" and column in df_star.columns:
    if operator == "=":
        excluded_df = df_star[df_star[column].isin(values)]
        df_star = df_star[~df_star[column].isin(values)]
    else:
        excluded_df = df_star[~df_star[column].isin(values)]
        df_star = df_star[df_star[column].isin(values)]
else:
    print("Invalid column or file type.")
    exit()

# Key extraction
algo_keys = df_algo['Agreement_name'].astype(str).apply(
    lambda x: x.replace('_RIMR', '3CR').replace('_RIMP', '3CP').replace(" ", "").strip()
).tolist()

star_keys = df_star.apply(
    lambda row: str(row.get('CRDS Party Code', '')).strip().replace(" ", "") +
                "3" + str(row.get('Post Direction', '')).strip().replace(" ", ""),
    axis=1
).tolist()

# Matching logic
matched, unmatched = [], []
star_key_map = defaultdict(list)
for idx, key in enumerate(star_keys):
    star_key_map[key].append(idx)

matched_star_indices = set()
matched_algo_indices = set()
star_key_used_count = defaultdict(int)

for i, algo_key in enumerate(algo_keys):
    matching_idxs = star_key_map.get(algo_key, [])
    if len(matching_idxs) == 1 and matching_idxs[0] not in matched_star_indices:
        matched.append({"ALGO Key": algo_key, "STAR Key": star_keys[matching_idxs[0]], "Status": "Match"})
        matched_star_indices.add(matching_idxs[0])
        matched_algo_indices.add(i)
        star_key_used_count[star_keys[matching_idxs[0]]] += 1
    elif len(matching_idxs) > 1:
        unmatched.append({"ALGO Key": algo_key, "STAR Key": "<Multiple STAR Match>", "Status": "Mismatch - Multiple STAR Keys"})
        for idx in matching_idxs:
            unmatched.append({"ALGO Key": "<No Match>", "STAR Key": star_keys[idx], "Status": "Mismatch - STAR Key in Multiple Match"})
        matched_algo_indices.add(i)
        for idx in matching_idxs:
            star_key_used_count[star_keys[idx]] += 1
    else:
        unmatched.append({"ALGO Key": algo_key, "STAR Key": "<No Match>", "Status": "Mismatch - No STAR Match"})

for idx, star_key in enumerate(star_keys):
    if idx not in matched_star_indices and star_key_used_count[star_key] == 0:
        unmatched.append({"ALGO Key": "<No Match>", "STAR Key": star_key, "Status": "Mismatch - No ALGO Match"})

matched_df = pd.DataFrame(matched)
unmatched_df = pd.DataFrame(unmatched)

# Table names
prefix = "im_star"
matched_tbl = f"{prefix}_matched_records"
unmatched_tbl = f"{prefix}_unmatched_records"
excluded_tbl = f"{prefix}_excluded_records"

# Write to Oracle DB
def write_to_db(df, table_name):
    cursor.execute(f"BEGIN EXECUTE IMMEDIATE 'DROP TABLE {table_name}'; EXCEPTION WHEN OTHERS THEN NULL; END;")
    cols = ', '.join([f'"{col}" VARCHAR2(4000)' for col in df.columns])
    cursor.execute(f"CREATE TABLE {table_name} ({cols})")
    for _, row in df.iterrows():
        placeholders = ','.join([':{}'.format(i+1) for i in range(len(row))])
        cursor.execute(f"INSERT INTO {table_name} VALUES ({placeholders})", list(row))
    conn.commit()

write_to_db(matched_df, matched_tbl)
write_to_db(unmatched_df, unmatched_tbl)
if not excluded_df.empty:
    write_to_db(excluded_df, excluded_tbl)

print("\nReconciliation Complete!")
print(f"Matched: {len(matched_df)} records → Table: {matched_tbl}")
print(f"Unmatched: {len(unmatched_df)} records → Table: {unmatched_tbl}")
print(f"Excluded: {len(excluded_df)} records → Table: {excluded_tbl if not excluded_df.empty else 'None'}")

# Close connection
cursor.close()
conn.close()
    
