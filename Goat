7️⃣ travell service

travell.service.ts

import { Injectable } from '@angular/core';

@Injectable({ providedIn: 'root' })
export class TravellService {
  private travellData: any[] = [];

  submitTravell(data: any) {
    this.travellData.push(data);
    console.log('Travell data:', this.travellData);
  }

  getTravellData() {
    return this.travellData;
  }
}


---

8️⃣ travel-details component (AG Grid)

travel-details.ts

import { Component, OnInit } from '@angular/core';
import { TravellService } from '../travell/travell.service';

@Component({
  selector: 'app-travel-details',
  templateUrl: './travel-details.html',
  styleUrls: ['./travel-details.css']
})
export class TravelDetailsComponent implements OnInit {
  columnDefs = [
    { headerName: 'UID', field: 'uid' },
    { headerName: 'Name', field: 'name' },
    { headerName: 'Line Manager', field: 'lineManager' },
    { headerName: 'Travel Type', field: 'travelType' },
    { headerName: 'Approver 1', field: 'approver1' },
    { headerName: 'Approver 2', field: 'approver2' }
  ];
  rowData: any[] = [];

  constructor(private travellService: TravellService) {}

  ngOnInit() {
    this.rowData = this.travellService.getTravellData();
  }
}

travel-details.html

<div class="travel-details-container">
  <ag-grid-angular
    style="width: 100%; height: 500px;"
    class="ag-theme-alpine"
    [rowData]="rowData"
    [columnDefs]="columnDefs">
  </ag-grid-angular>
</div>

travel-details.css

.travel-details-container {
  max-width: 900px;
  margin: 20px auto;
}


---

9️⃣ approvals component

approvals.ts

import { Component, OnInit } from '@angular/core';
import { TravellService } from '../travell/travell.service';

@Component({
  selector: 'app-approvals',
  templateUrl: './approvals.html',
  styleUrls: ['./approvals.css']
})
export class ApprovalsComponent implements OnInit {
  approvals: any[] = [];

  constructor(private travellService: TravellService) {}

  ngOnInit() {
    this.approvals = this.travellService.getTravellData().map(d => ({
      uid: d.uid,
      name: d.name,
      approver1: d.approver1,
      approver2: d.approver2
    }));
  }
}

approvals.html

<div class="approvals-container">
  <h2>Approval Requests</h2>
  <table>
    <thead>
      <tr>
        <th>UID</th>
        <th>Name</th>
        <th>Approver 1</th>
        <th>Approver 2</th>
      </tr>
    </thead>
    <tbody>
      <tr *ngFor="let a of approvals">
        <td>{{a.uid}}</td>
        <td>{{a.name}}</td>
        <td>{{a.approver1}}</td>
        <td>{{a.approver2}}</td>
      </tr>
    </tbody>
  </table>
</div>

approvals.css

.approvals-container {
