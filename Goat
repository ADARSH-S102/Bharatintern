  <h2>Add Your Travell Details</h2>

  <form class="travell-form" onsubmit="submitForm(event)">
    <!-- Travel Details -->
    <div class="travel-details-container">
      <label>UID:</label>
      <input id="uid" type="text" placeholder="Enter UID">

      <label>Name:</label>
      <input id="name" type="text" placeholder="Enter Name">

      <label>Line Manager Name:</label>
      <input id="lineManager" type="text" placeholder="Enter Line Manager">

      <label>Travel Type:</label>
      <select id="travelType" onchange="toggleApprover2()">
        <option value="">Select</option>
        <option value="Domestic">Domestic</option>
        <option value="International">International</option>
      </select>
    </div>

    <!-- Approvals -->
    <div class="approvals-container">
      <label>Approver 1:</label>
      <input id="approver1" type="text" placeholder="Enter Approver 1">

      <div id="approver2Div" style="display:none;">
        <label>Approver 2:</label>
        <input id="approver2" type="text" placeholder="Enter Approver 2">
      </div>
    </div>

    <button type="submit">Submit</button>
  </form>
</div>

<script>
function toggleApprover2() {
  const type = document.getElementById('travelType').value;
  document.getElementById('approver2Div').style.display =
    type === 'International' ? 'block' : 'none';
}

function submitForm(e) {
  e.preventDefault();
  const data = {
    uid: document.getElementById('uid').value,
    name: document.getElementById('name').value,
    lineManager: document.getElementById('lineManager').value,
    travelType: document.getElementById('travelType').value,
    approver1: document.getElementById('approver1').value,
    approver2: document.getElementById('approver2').value
  };
  alert('Form Submitted:\n' + JSON.stringify(data, null, 2));
  document.querySelector('.travell-form').reset();
  toggleApprover2();
}
</script>

