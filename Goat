üü© travel-details.html

<div class="details-container">
  <h2>Travel Details</h2>

  <table class="travel-table" *ngIf="travels.length > 0; else noData">
    <thead>
      <tr>
        <th>UID</th>
        <th>Name</th>
        <th>Manager</th>
        <th>Domain</th>
        <th>Cluster</th>
        <th>Origin</th>
        <th>Destination</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Travel Class</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <tr *ngFor="let t of travels">
        <td>{{ t.uid }}</td>
        <td>{{ t.name }}</td>
        <td>{{ t.manager }}</td>
        <td>{{ t.domain }}</td>
        <td>{{ t.cluster }}</td>
        <td>{{ t.origin }}</td>
        <td>{{ t.destination }}</td>
        <td>{{ t.startDate | date }}</td>
        <td>{{ t.endDate | date }}</td>
        <td>{{ t.travelClass }}</td>
        <td>
          <span [class]="getStatusClass(t.status)">
            {{ t.status || 'Approval Pending' }}
          </span>
        </td>
      </tr>
    </tbody>
  </table>

  <ng-template #noData>
    <p class="no-data">No travel requests found.</p>
  </ng-template>
</div>


