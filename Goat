  <h2>Travel Approvals</h2>

  <table class="approval-table" *ngIf="travels.length > 0; else noData">
    <thead>
      <tr>
        <th>UID</th>
        <th>Name</th>
        <th>Domain</th>
        <th>Cluster</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr *ngFor="let t of travels">
        <td>{{ t.uid }}</td>
        <td>{{ t.name }}</td>
        <td>{{ t.domain }}</td>
        <td>{{ t.cluster }}</td>
        <td>{{ t.startDate | date }}</td>
        <td>{{ t.endDate | date }}</td>
        <td>
          <button class="approve-btn" (click)="approve(t)">Approve</button>
          <button class="reject-btn" (click)="reject(t)">Reject</button>
        </td>
      </tr>
    </tbody>
  </table>

  <ng-template #noData>
    <p class="no-data">No pending travel requests found.</p>
  </ng-template>
</div>


