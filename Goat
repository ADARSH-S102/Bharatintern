        <th>Name</th>
        <th>Line Manager</th>
        <th>Travel Type</th>
        <th>Approver 1</th>
        <th>Approver 2</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr *ngFor="let t of travelList">
        <td>{{ t.uid }}</td>
        <td>{{ t.name }}</td>
        <td>{{ t.lineManager }}</td>
        <td>{{ t.travelType }}</td>
        <td>{{ t.approver1 }}</td>
        <td>{{ t.approver2 || '-' }}</td>
        <td>{{ t.status }}</td>
        <td>
          <button class="approve-btn" (click)="approve(t.uid)">Approve</button>
