        <td>{{ t.cluster1 }}</td>
        <td>{{ t.origincity }}</td>
        <td>{{ t.destinationCity }}</td>
        <td>{{ t.startDate | date }}</td>
        <td>{{ t.endDate | date }}</td>
        <td>{{ t.travelclass }}</td>
        <td>
          <span [class]="getStatusClass(t.status)">
            {{ t.status || 'Pending' }}
          </span>
        </td>
      </tr>
    </tbody>

  </table>

