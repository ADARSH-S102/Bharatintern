6Ô∏è‚É£ travell component

travell.ts

import { Component } from '@angular/core';
import { TravellService } from './travell.service';

@Component({
  selector: 'app-travell',
  templateUrl: './travell.html',
  styleUrls: ['./travell.css']
})
export class TravellComponent {
  showApprover2 = false;
  travelType = '';

  constructor(private travellService: TravellService) {}

  toggleApprover2() {
    this.showApprover2 = this.travelType === 'International';
  }

  submitForm(formData: any) {
    this.travellService.submitTravell(formData);
    alert('Form submitted successfully!');
  }
}

travell.html

<div class="travell-form-container">
  <h2>Add Your Travell Details</h2>
  <form (ngSubmit)="submitForm(form.value)" #form="ngForm" class="travell-form">
    <label>UID:</label>
    <input type="text" name="uid" ngModel required>
    <label>Name:</label>
    <input type="text" name="name" ngModel required>
    <label>Line Manager:</label>
    <input type="text" name="lineManager" ngModel required>
    <label>Travel Type:</label>
    <select name="travelType" [(ngModel)]="travelType" (change)="toggleApprover2()">
      <option value="">Select</option>
      <option value="Domestic">Domestic</option>
      <option value="International">International</option>
    </select>
    <label>Approver 1:</label>
    <input type="text" name="approver1" ngModel required>
    <div *ngIf="showApprover2">
      <label>Approver 2:</label>
      <input type="text" name="approver2" ngModel>
    </div>
    <button type="submit">Submit</button>
  </form>
</div>

