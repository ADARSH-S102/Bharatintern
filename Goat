üßæ 6Ô∏è‚É£ travell.ts (New Travel Form)

import { Component, OnInit } from '@angular/core';
import { FormBuilder, FormGroup, Validators } from '@angular/forms';
import { HttpClient } from '@angular/common/http';
import { TravelService } from '../travel';

@Component({
  selector: 'app-travell',
  templateUrl: './travell.html',
  styleUrls: ['./travell.css']
})
export class TravellComponent implements OnInit {
  travelForm: FormGroup;
  domains: string[] = [];
  clusters: string[] = [];
  subclusters: string[] = [];
  cluster1List: string[] = [];
  hods: string[] = [];
  cities: string[] = [];
  travelTypes: string[] = [];
  travelClasses: string[] = [];
  types: string[] = [];

  constructor(
    private fb: FormBuilder,
    private http: HttpClient,
    private travelService: TravelService
  ) {
    this.travelForm = this.fb.group({
      uid: ['', Validators.required],
      name: ['', Validators.required],
      lineManager: ['', Validators.required],
      domain: ['', Validators.required],
      cluster: ['', Validators.required],
      subcluster: ['', Validators.required],
      cluster1: ['', Validators.required],
      hod: ['', Validators.required],
      originCity: ['', Validators.required],
      destinationCity: ['', Validators.required],
      startDate: ['', Validators.required],
      endDate: ['', Validators.required],
      travelType: ['', Validators.required],
      travelClass: ['', Validators.required],
      type: ['', Validators.required],
      purpose: ['', Validators.required]
    });
  }

  ngOnInit() {
    this.loadDropdowns();
  }

  loadDropdowns() {
    const fields = [
      'domain', 'cluster', 'subcluster', 'cluster1',
      'hod', 'origincity', 'destinationcity',
      'traveltype', 'travelclass', 'type'
    ];

    fields.forEach(field => {
      this.http.get<string[]>(`http://localhost:8080/api/dropdowns/${field}`)
        .subscribe(values => {
          switch (field) {
            case 'domain': this.domains = values; break;
            case 'cluster': this.clusters = values; break;
            case 'subcluster': this.subclusters = values; break;
            case 'cluster1': this.cluster1List = values; break;
            case 'hod': this.hods = values; break;
            case 'origincity':
            case 'destinationcity': this.cities = values; break;
            case 'traveltype': this.travelTypes = values; break;
            case 'travelclass': this.travelClasses = values; break;
            case 'type': this.types = values; break;
          }
        });
    });
  }

  submitForm() {
    if (this.travelForm.valid) {
      this.travelService.addTravel(this.travelForm.value);
      alert('Travel request submitted successfully!');
      this.travelForm.reset();
    } else {
      alert('Please fill in all required fields.');
    }
  }
}


