‚úÖ app.css (THIS FIXES EVERYTHING)

/* ENTIRE APP */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  font-family: "Poppins", sans-serif;
  background-color: #f9fdf9;
}

/* HEADER (FIXED) */
.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80px;
  background-color: #008e5c;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
  z-index: 1000;
}

/* FLOATING BUTTON (FIXED) */
.floating-menu-button {
  position: fixed;
  top: 90px;        /* right below header */
  left: 15px;
  width: 45px;
  height: 40px;
  background-color: #008e5c;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 6px;
  cursor: pointer;
  z-index: 1100;    /* above everything except side menu */
}

.floating-menu-button .line {
  width: 100%;
  height: 5px;
  background: white;
  margin: 3px 0;
  border-radius: 4px;
}

/* SIDE MENU */
.side-menu {
  position: fixed;
  top: 80px;              /* start exactly under header */
  left: -230px;
  width: 230px;
  height: calc(100vh - 80px);
  background-color: #008e5c;
  color: white;
  transition: left 0.3s ease;
  padding-top: 20px;
  z-index: 1200;
}

.side-menu.open {
  left: 0;
}

.side-menu ul {
  padding: 0;
  list-style: none;
}

.side-menu li {
  padding: 15px 20px;
  cursor: pointer;
  font-size: 16px;
}

.side-menu li:hover {
  background-color: #066e4a;
}

.back-btn {
  font-weight: bold;
  background-color: rgba(255, 255, 255, 0.2);
}

/* CONTENT AREA (FULL SCROLL) */
.content {
  margin-top: 80px;                 /* below header */
  padding: 20px;
  height: calc(100vh - 80px);
  overflow-y: auto;                 /* allows scroll */
  z-index: 1;
}


