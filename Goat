üü¶ 2Ô∏è‚É£ travell.ts ‚Äî ‚úÖ UPDATED

Added the dropdown and radio options integration using the new DropdownService.

import { Component, OnInit } from '@angular/core';
import { FormBuilder, FormGroup, Validators } from '@angular/forms';
import Swal from 'sweetalert2';
import { TravelService } from '../travel/travel';
import { DropdownService } from '../travel/dropdown';

@Component({
  selector: 'app-travell',
  templateUrl: './travell.html',
  styleUrls: ['./travell.css']
})
export class TravellComponent implements OnInit {

  travelForm: FormGroup;
  submitted = false;

  // dropdown & radio data arrays
  domains: string[] = [];
  clusters: string[] = [];
  subclusters: string[] = [];
  cluster1s: string[] = [];
  hods: string[] = [];
  cities: string[] = [];
  travelTypes: string[] = [];
  travelClasses: string[] = [];
  types: string[] = [];

  constructor(
    private fb: FormBuilder,
    private travelService: TravelService,
    private dropdownService: DropdownService
  ) {
    this.travelForm = this.fb.group({
      uid: ['', Validators.required],
      name: ['', Validators.required],
      lineManager: ['', Validators.required],
      domain: ['', Validators.required],
      cluster: ['', Validators.required],
      subcluster: ['', Validators.required],
      cluster1: ['', Validators.required],
      hod: ['', Validators.required],
      originCity: ['', Validators.required],
      destinationCity: ['', Validators.required],
      startDate: ['', Validators.required],
      endDate: ['', Validators.required],
      travelType: ['', Validators.required],
      travelClass: ['', Validators.required],
      type: ['', Validators.required],
      purpose: ['', [Validators.required, Validators.minLength(5)]]
    });
  }

  ngOnInit(): void {
    this.loadDropdowns();
  }

  loadDropdowns() {
    this.dropdownService.getDomains().subscribe(data => this.domains = data);
    this.dropdownService.getClusters().subscribe(data => this.clusters = data);
    this.dropdownService.getSubclusters().subscribe(data => this.subclusters = data);
    this.dropdownService.getCluster1().subscribe(data => this.cluster1s = data);
    this.dropdownService.getHods().subscribe(data => this.hods = data);
    this.dropdownService.getCities().subscribe(data => this.cities = data);
    this.dropdownService.getTravelTypes().subscribe(data => this.travelTypes = data);
    this.dropdownService.getTravelClasses().subscribe(data => this.travelClasses = data);
    this.dropdownService.getTypes().subscribe(data => this.types = data);
  }

  onSubmit() {
    this.submitted = true;
    if (this.travelForm.invalid) {
      Swal.fire('Error', 'Please fill all required fields', 'error');
      return;
    }

    this.travelService.addTravel(this.travelForm.value);
    Swal.fire('Success', 'Travel request submitted successfully', 'success');
    this.travelForm.reset();
    this.submitted = false;
  }
}


