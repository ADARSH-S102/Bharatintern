    <a href="home.html" onclick="closeSidebar()">Home</a>
    <a href="travell.html" onclick="closeSidebar()">New Travell</a>
  </div>

  <!-- Main Content -->
  <div class="main-content" id="main-content">
    <!-- Content will be loaded here -->
  </div>
</div>

<script>
  function toggleSidebar() {
    document.getElementById('sidebar').classList.toggle('open');
    document.getElementById('main-content').classList.toggle('shift');
  }
  function closeSidebar() {
    document.getElementById('sidebar').classList.remove('open');
    document.getElementById('main-content').classList.remove('shift');
  }
</script>

