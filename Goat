‚∏ª

travel.service.ts

import { Injectable } from '@angular/core';

@Injectable({
  providedIn: 'root'
})
export class TravelService {
  private travels: any[] = [];

  addTravel(travel: any) {
    this.travels.push({ ...travel, status: 'Pending Approval' });
  }

  getTravels() {
    return this.travels;
  }

  updateStatus(index: number, status: string) {
    this.travels[index].status = status;
  }
}


