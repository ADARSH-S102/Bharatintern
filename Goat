‚úÖ app.html (TOP BAR + MAIN SIDEBAR + SUB SIDEBAR)

<!-- TOP BAR -->
<div class="topbar">
  <span class="topbar-title">My Application</span>
</div>

<!-- MAIN LAYOUT -->
<div class="app-body">

  <!-- MAIN SIDEBAR -->
  <div class="main-sidebar">

    <div class="sidebar-item">
      <div class="icon-wrapper">
        <img src="assets/icons/travel.svg" alt="Travel" />
      </div>
      <span class="label">Travel</span>
    </div>

    <div
      class="sidebar-item active"
      (click)="showSubSidebar = true"
    >
      <div class="icon-wrapper">
        <img src="assets/icons/requisition.svg" alt="Requisition" />
      </div>
      <span class="label">Requisition</span>
    </div>

  </div>

  <!-- SUB SIDEBAR -->
  <app-sub-sidebar
    *ngIf="showSubSidebar"
    (back)="showSubSidebar = false">
  </app-sub-sidebar>

  <!-- MAIN CONTENT -->
  <div class="content">
    Main content goes here
  </div>

</div>


