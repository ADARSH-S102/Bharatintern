9Ô∏è‚É£ approvals component

approvals.ts

import { Component, OnInit } from '@angular/core';
import { TravellService } from '../travell/travell.service';

@Component({
  selector: 'app-approvals',
  templateUrl: './approvals.html',
  styleUrls: ['./approvals.css']
})
export class ApprovalsComponent implements OnInit {
  approvals: any[] = [];

  constructor(private travellService: TravellService) {}

  ngOnInit() {
    this.approvals = this.travellService.getTravellData().map(d => ({
      uid: d.uid,
      name: d.name,
      approver1: d.approver1,
      approver2: d.approver2
    }));
  }
}

approvals.html

<div class="approvals-container">
  <h2>Approval Requests</h2>
  <table>
    <thead>
      <tr>
        <th>UID</th>
        <th>Name</th>
        <th>Approver 1</th>
        <th>Approver 2</th>
      </tr>
    </thead>
    <tbody>
      <tr *ngFor="let a of approvals">
        <td>{{a.uid}}</td>
        <td>{{a.name}}</td>
        <td>{{a.approver1}}</td>
        <td>{{a.approver2}}</td>
      </tr>
    </tbody>
  </table>
</div>

approvals.css

.approvals-container {
  max-width: 900px;
  margin: 20px auto;
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 6px 15px rgba(0,128,0,0.15);
}

.approvals-container h2 {
  color: #2e7d32;
  margin-bottom: 20px;
}

.approvals-container table {
  width: 100%;
  border-collapse: collapse;
}

.approvals-container th, .approvals-container td {
  border: 1px solid #a5d6a7;
  padding: 8px;
  text-align: left;
}

.approvals-container th {
  background-color: #e8f5e9;
  color: #2e7d32;
}


