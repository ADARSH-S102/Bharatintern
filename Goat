import { Component, EventEmitter, Output } from '@angular/core';

@Component({
  selector: 'app-sub-sidebar',
  standalone: true,
  templateUrl: './sub-sidebar.html',
  styleUrls: ['./sub-sidebar.css']
})
export class SubSidebar {
  @Output() back = new EventEmitter<void>();
}


