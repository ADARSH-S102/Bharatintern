üìò travell.ts

import { Component, OnInit } from '@angular/core';
import { FormBuilder, FormGroup, Validators, ReactiveFormsModule } from '@angular/forms';
import { CommonModule } from '@angular/common';
import Swal from 'sweetalert2';
import { TravelService } from '../../travel';

@Component({
  selector: 'app-travell',
  standalone: true,
  imports: [CommonModule, ReactiveFormsModule],
  templateUrl: './travell.html',
  styleUrls: ['./travell.css']
})
export class TravellComponent implements OnInit {
  travelForm!: FormGroup;

  // Dropdown & radio data (these will later come from backend YAML APIs)
  domainList: string[] = ['IT', 'Finance', 'HR', 'Operations'];
  clusterList: string[] = ['Cluster A', 'Cluster B', 'Cluster C'];
  subClusterList: string[] = ['Subcluster 1', 'Subcluster 2'];
  cluster1List: string[] = ['Cluster-1A', 'Cluster-1B'];
  hodList: string[] = ['HOD 1', 'HOD 2', 'HOD 3'];
  originCityList: string[] = ['Bangalore', 'Chennai', 'Delhi', 'Mumbai'];
  destinationCityList: string[] = ['London', 'New York', 'Singapore', 'Tokyo'];
  travelTypeList: string[] = ['Business', 'Personal'];
  travelClassList: string[] = ['Economy', 'Business', 'First Class'];
  typeList: string[] = ['Domestic', 'International'];

  constructor(private fb: FormBuilder, private travelService: TravelService) {}

  ngOnInit(): void {
    this.travelForm = this.fb.group({
      uid: ['', Validators.required],
      name: ['', Validators.required],
      manager: ['', Validators.required],
      domain: ['', Validators.required],
      cluster: ['', Validators.required],
      subcluster: ['', Validators.required],
      cluster1: ['', Validators.required],
      hod: ['', Validators.required],
      origin: ['', Validators.required],
      destination: ['', Validators.required],
      startDate: ['', Validators.required],
      endDate: ['', Validators.required],
      travelType: ['', Validators.required],
      travelClass: ['', Validators.required],
      type: ['', Validators.required],
      purpose: ['', [Validators.required, Validators.minLength(5)]]
    });
  }

  onSubmit(): void {
    if (this.travelForm.valid) {
      this.travelService.addTravel(this.travelForm.value);
      Swal.fire({
        icon: 'success',
        title: 'Travel Request Submitted!',
        text: 'Your travel details have been successfully saved.',
        confirmButtonColor: '#0a7c2e'
      });
      this.travelForm.reset();
    } else {
      Swal.fire({
        icon: 'error',
        title: 'Form Incomplete',
        text: 'Please fill all the required fields before submitting.',
        confirmButtonColor: '#0a7c2e'
      });
    }
  }
}


