/* === HEADER === */
.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 60px;
  background: #1976d2;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15px;
  z-index: 1000;
  box-sizing: border-box;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 10px;
}

.portal-icon {
  height: 32px;
  width: 32px;
}

.portal-title {
  font-size: 20px;
  font-weight: 600;
  color: white;
}

/* === FLOATING MENU BUTTON === */
.floating-menu-btn {
  position: fixed;
  top: 12px;
  right: 15px;
  font-size: 24px;
  background: white;
  border: none;
  padding: 6px 10px;
  border-radius: 8px;
  cursor: pointer;
  z-index: 1500;
}

/* === SIDE MENU === */
.side-menu {
  position: fixed;
  top: 0;
  right: -260px;
  width: 260px;
  height: 100%;
  background: white;
  box-shadow: -2px 0 10px rgba(0,0,0,0.2);
  padding: 20px;
  transition: 0.3s ease;
  z-index: 2000;
}

.side-menu.open {
  right: 0;
}

.side-menu nav a {
  display: block;
