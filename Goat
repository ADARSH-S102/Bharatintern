  color: #333;
  text-decoration: none;
}

.close-btn {
  background: none;
  border: none;
  font-size: 24px;
  float: right;
  cursor: pointer;
}

/* === CONTENT WRAPPER === */
.content-wrapper {
  margin-top: 60px; /* same as header height */
  padding: 15px;
  box-sizing: border-box;
  overflow-y: auto;
  height: calc(100vh - 60px);
}

