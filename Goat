        <option *ngFor="let d of domains" [value]="d">{{ d }}</option>
      </select>

      <label>Cluster:</label>
      <select name="cluster" ngModel required>
        <option *ngFor="let c of clusters" [value]="c">{{ c }}</option>
      </select>

      <label>Sub Cluster:</label>
      <select name="subCluster" ngModel required>
        <option *ngFor="let s of subclusters" [value]="s">{{ s }}</option>
      </select>

      <label>Cluster-1:</label>
      <select name="cluster1" ngModel required>
        <option *ngFor="let c1 of cluster1s" [value]="c1">{{ c1 }}</option>
      </select>

      <label>HOD:</label>
      <select name="hod" ngModel required>
        <option *ngFor="let h of hods" [value]="h">{{ h }}</option>
      </select>

      <label>Travel Type:</label>
      <div class="radio-group">
        <label><input type="radio" name="travelType" value="Domestic" ngModel required /> Domestic</label>
        <label><input type="radio" name="travelType" value="International" ngModel required /> International</label>
      </div>

      <label>Origin City:</label>
      <select name="originCity" ngModel required>
        <option *ngFor="let city of cities" [value]="city">{{ city }}</option>
      </select>

      <label>Destination City:</label>
      <select name="destinationCity" ngModel required>
        <option *ngFor="let city of cities" [value]="city">{{ city }}</option>
      </select>

      <label>Start Date:</label>
      <input type="date" name="startDate" ngModel required />

      <label>End Date:</label>
      <input type="date" name="endDate" ngModel required />

      <label>Travel Class:</label>
      <div class="radio-group">
        <label><input type="radio" name="travelClass" value="Economy" ngModel required /> Economy</label>
        <label><input type="radio" name="travelClass" value="Business" ngModel required /> Business</label>
      </div>

      <label>Type:</label>
      <div class="radio-group">
        <label><input type="radio" name="type" value="BAU" ngModel required /> BAU</label>
        <label><input type="radio" name="type" value="NBAU" ngModel required /> NBAU</label>
      </div>

      <label>Purpose of Travel:</label>
      <textarea name="purpose" rows="3" ngModel required></textarea>
    </div>

    <button type="submit" class="submit-btn">Submit</button>
  </form>
</div>


