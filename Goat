9Ô∏è‚É£ approvals component

approvals.ts

import { Component, OnInit } from '@angular/core';
import { TravellService } from '../travell/travell.service';

@Component({
  selector: 'app-approvals',
  templateUrl: './approvals.html',
  styleUrls: ['./approvals.css']
})
export class ApprovalsComponent implements OnInit {
  approvals: any[] = [];

  constructor(private travellService: TravellService) {}

  ngOnInit() {
    this.approvals = this.travellService.getTravellData().map(d => ({
      uid: d.uid,
      name: d.name,
      approver1: d.approver1,
      approver2: d.approver2
    }));
  }
}

approvals.html

<div class="approvals-container">
  <h2>Approval Requests</h2>
  <table>
    <thead>
      <tr>
        <th>UID</th>
        <th>Name</th>
        <th>Approver 1</th>
        <th>Approver 2</th>
      </tr>
    </thead>
    <tbody>
      <tr *ngFor="let a of approvals">
        <td>{{a.uid}}</td>
        <td>{{a.name}}</td>
        <td>{{a.approver1}}</td>
        <td>{{a.approver2}}</td>
      </tr>
    </tbody>
  </table>
</div>

