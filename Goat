    <div class="icon" (click)="showSubSidebar = true">â˜°</div>
  </div>

  <!-- SUB SIDEBAR -->
  <app-sub-sidebar
    *ngIf="showSubSidebar"
    (back)="showSubSidebar = false">
  </app-sub-sidebar>

  <!-- CONTENT -->
  <div class="content">
    Main content goes here
  </div>

</div>


