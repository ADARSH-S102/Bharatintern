    <th>Cluster</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Start</th>
    <th>End</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

  <tr *ngFor="let t of travels">
    <td>{{t.uid}}</td>
    <td>{{t.name}}</td>
    <td>{{t.domain}}</td>
    <td>{{t.cluster}}</td>
    <td>{{t.originCity}}</td>
    <td>{{t.destinationCity}}</td>
    <td>{{t.startDate}}</td>
    <td>{{t.endDate}}</td>
    <td>{{t.status || 'Pending'}}</td>
    <td>
      <button (click)="approve(t.uid)">Approve</button>
      <button (click)="reject(t.uid)">Reject</button>
    </td>
  </tr>
</table>


