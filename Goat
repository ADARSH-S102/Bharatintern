import { Component, OnInit } from '@angular/core';
import { TravellService } from '../travell/travell.service';

@Component({
  selector: 'app-travel-details',
  templateUrl: './travel-details.html',
  styleUrls: ['./travel-details.css']
})
export class TravelDetailsComponent implements OnInit {
  columnDefs = [
    { headerName: 'UID', field: 'uid' },
    { headerName: 'Name', field: 'name' },
    { headerName: 'Line Manager', field: 'lineManager' },
    { headerName: 'Travel Type', field: 'travelType' },
    { headerName: 'Approver 1', field: 'approver1' },
    { headerName: 'Approver 2', field: 'approver2' }
  ];
  rowData: any[] = [];

  constructor(private travellService: TravellService) {}

  ngOnInit() {
    this.rowData = this.travellService.getTravellData();
  }
}

travel-details.html

<div class="travel-details-container">
  <ag-grid-angular
    style="width: 100%; height: 500px;"
    class="ag-theme-alpine"
    [rowData]="rowData"
    [columnDefs]="columnDefs">
  </ag-grid-angular>
</div>

travel-details.css

.travel-details-container {
  max-width: 900px;
  margin: 20px auto;
}


