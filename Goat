  font-size: 13px;
  font-weight: 600;
  color: #6b7280;
  padding: 8px 16px;
}

/* MENU ITEMS */
.menu-item {
  padding: 10px 16px;
  font-size: 14px;
  color: #374151;
  cursor: pointer;
  background: transparent;        /* ‚úÖ IMPORTANT */
  transition: background 0.2s;
}

/* HOVER ONLY */
.menu-item:hover {
  background: #eef2ee;
}

/* ACTIVE (ONLY IF CLASS IS ADDED) */
.menu-item.active {
  background: #e6f1ea;
  color: #2f6f4e;
  font-weight: 600;
}

/* REMOVE UNWANTED CLICK / FOCUS STATES */
.menu-item:focus,
.menu-item:active {
  outline: none;
  background: transparent;
}

/* DIVIDER */
.divider {
  height: 1px;
  background: #e5e7eb;
  margin: 8px 0;
}


