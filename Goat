travell/travell.ts

import { Component } from '@angular/core';
import { NgForm } from '@angular/forms';
import { CommonModule } from '@angular/common';
import { TravelService } from '../travel.service';

@Component({
  selector: 'app-travell',
  standalone: true,
  imports: [CommonModule],
  templateUrl: './travell.html',
  styleUrls: ['./travell.css']
})
export class TravellComponent {
  travel: any = {
    uid: '', name: '', lineManager: '', type: '', approver1: '', approver2: ''
  };

  constructor(private travelService: TravelService) {}

  onSubmit(form: NgForm) {
    if (form.valid) {
      alert('Form submitted successfully!');
      this.travelService.addTravel(this.travel);
      form.resetForm();
    } else {
      alert('Please fill all required fields.');
    }
  }
}

travell/travell.html

<div class="form-container">
  <h2>Add Your Travel Details</h2>
  <form #travelForm="ngForm" (ngSubmit)="onSubmit(travelForm)">
    <label>UID</label>
    <input type="text" name="uid" [(ngModel)]="travel.uid" required />

    <label>Name</label>
    <input type="text" name="name" [(ngModel)]="travel.name" required />

    <label>Line Manager</label>
    <input type="text" name="lineManager" [(ngModel)]="travel.lineManager" required />

    <label>Travel Type</label>
    <label><input type="radio" name="type" [(ngModel)]="travel.type" value="Domestic" required /> Domestic</label>
    <label><input type="radio" name="type" [(ngModel)]="travel.type" value="International" required /> International</label>

    <div *ngIf="travel.type === 'International'">
      <label>Approver 2</label>
      <input type="text" name="approver2" [(ngModel)]="travel.approver2" required />
    </div>

    <label>Approver 1</label>
    <input type="text" name="approver1" [(ngModel)]="travel.approver1" required />

    <button type="submit">Submit</button>
  </form>
</div>

