4ï¸âƒ£ app.ts

import { Component } from '@angular/core';
import { NgIf } from '@angular/common';
import { SubSidebar } from './sub-sidebar/sub-sidebar';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [NgIf, SubSidebar],
  templateUrl: './app.html',
  styleUrls: ['./app.css']
})
export class App {
  showSubSidebar = false;
}


---

5ï¸âƒ£ app.html

